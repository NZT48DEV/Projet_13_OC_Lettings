############################
# Django
############################

# Secret key (generate a new one for local/prod usage)
SECRET_KEY=change-me
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1


############################
# Sentry
############################

# Leave empty or replace with your real DSN
SENTRY_DSN=

# Environment name (development / staging / production)
SENTRY_ENVIRONMENT=development

# Application release version
SENTRY_RELEASE=oc-lettings@1.0.0

# Sentry options
ATTACH_STACKTRACE=true
SEND_DEFAULT_PII=false

# Performance & profiling (0.0 disables sampling)
SENTRY_TRACES_SAMPLE_RATE=0.0
SENTRY_PROFILES_SAMPLE_RATE=0.0

# Enable or disable Sentry logging integration
SENTRY_ENABLE_LOGS=false


############################
# Logging
############################

# Global log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Minimum level for Sentry events
EVENT_LEVEL=WARNING
